{
    "author": {
        "name": "Jiri Pihik"
    },
    "name": "cform",
    "displayName": "CloudFormation",
    "description": "VS Code Plugin for CloudFormation",
    "version": "0.0.21",
    "publisher": "aws-scripting-guy",
    "icon": "images/ManagementTools_CloudFormation.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/aws-scripting-guy/cform-VSCode.git"
    },
    "engines": {
        "vscode": "^0.10.1"
    },
    "categories": [
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "json",
                "aliases": [
                    "JSON",
                    "json"
                ],
                "extensions": [
                    ".json",
                    ".cform",
                    ".template"
                ]
            },
            {
                "id": "yaml",
                "aliases": [
                    "YAML",
                    "yaml"
                ],
                "extensions": [
                    ".yaml",
                    ".yml"
                ]
            }
        ],
        "snippets": [
            {
                "language": "json",
                "path": "./snippets/snippets.json"
            },
            {
                "language": "yaml",
                "path": "./snippets/yaml-snippets.json"
            }
        ]
    },
    "extensionDependencies": [
        "redhat.vscode-yaml"
    ]
}
